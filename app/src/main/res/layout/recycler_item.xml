<?xml version="1.0" encoding="utf-8"?>
<com.example.sdpc.myapplication.widget.DeskTopManagerItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:FocusProcess="http://schemas.android.com/apk/res-auto"
    android:layout_width="242px"
    android:layout_height="157px"
    FocusProcess:duration="300"
    FocusProcess:initNarrow="0.9"
    FocusProcess:finalNarrow="1.1"
    FocusProcess:resetByAni="false"
    FocusProcess:shadowZ="0"
    FocusProcess:widgetX="120"
    FocusProcess:widgetY="140"
    android:focusable="true"
    android:background="@color/color_white_ten_transparent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:focusable="false"
        android:layout_marginBottom="@dimen/margin_small"
        android:src="@drawable/file" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        style="@style/LabelDeskTop"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="@dimen/margin_small"
        android:text="Widget" />
</com.example.sdpc.myapplication.widget.DeskTopManagerItemLayout>