<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/divider"
    android:orientation="horizontal"
    android:showDividers="middle">

    <LinearLayout
        android:id="@+id/ll_dev_name"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:divider="@drawable/divider"
        android:orientation="vertical"
        android:showDividers="middle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/left"
            android:text="调试页面"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/tv_dev_mode"
            style="@style/style_dev_tab"
            android:text="调试模式" />

        <TextView
            android:id="@+id/tv_factory_mode"
            style="@style/style_dev_tab"
            android:text="工厂模式" />

        <TextView
            android:id="@+id/tv_leakcanary_mode"
            style="@style/style_dev_tab"
            android:text="内存泄漏检测" />

        <TextView
            android:id="@+id/tv_block_monitor"
            style="@style/style_dev_tab"
            android:text="BlockMonitor" />

        <TextView
            android:id="@+id/tv_plugin_dev_mode"
            style="@style/style_dev_tab"
            android:text="插件开发模式" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>