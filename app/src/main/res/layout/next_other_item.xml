<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="242px"
    android:layout_height="380px"
    android:background="@drawable/focus_selector"
    android:orientation="vertical">

    <com.example.sdpc.myapplication.widget.FlyTextLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:textColor="@color/colorPrimary"
        android:layout_height="257px"
        android:background="@color/color_white_ten_transparent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_centerInParent="true"
            android:focusable="false"
            android:scaleType="centerCrop"
            android:src="@drawable/file" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/LabelDeskTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_small"
            android:focusable="false"
            android:text="Widget" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="1000w+" />
    </com.example.sdpc.myapplication.widget.FlyTextLayout>

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:background="@drawable/focus_selector"
        style="@style/LabelDeskTop"
        android:text="请填写" />

</LinearLayout>
